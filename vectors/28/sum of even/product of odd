#include <iostream>
#include <vector>
#include <string>
using namespace std;

int main() {
  int evencount = 0;
  int oddproduct=1;
  bool hasodd = false;
  vector<int>num = {2, 4, 3, 6, 1, 9, 8, 0, 8, 5, 7, 3, 3};
  
  for(int i =0; i<num.size(); i++){
    if( num[i] % 2 ==0){
      evencount = evencount + num[i];
    }
    else{
      oddproduct = num[i] * oddproduct; 
      hasodd = true;
    }
  }
  
  cout<<"the sum of even numbers: "<<evencount<<endl;
  
  if(hasodd){
  cout<<"the product of odd numbers: "<<oddproduct;
  }
  else{
    cout<<"no odd numbers";
  }
  
}
